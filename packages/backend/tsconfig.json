{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "skipLibCheck": true,
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "exclude": ["**/node_modules", "node_modules", "**/*.spec.ts"]
}
